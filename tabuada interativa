print("=" * 40)
print("     🔢 TABUADA INTERATIVA 🔢")
print("=" * 40)

while True:
    try:
        numero = int(input("\nDigite um número para ver sua tabuada: "))
        break
    except ValueError:
        print("⚠️ Digite apenas números inteiros!")

print("\n" + "=" * 40)
print(f"📊 TABUADA DO {numero}")
print("=" * 40)

for i in range(1, 11):
    print(f"{numero} x {i:2} = {numero * i}")

print("=" * 40)
print("✅ FIM DA TABUADA ✅")
print("=" * 40)
